
CC?=egcs
LD?=egcs

CFLAGS?= -mno-cygwin -c -ansi -O3 -pedantic -Wall -DMSDOS -DGB
LDFLAGS = -mno-cygwin -s

CFILES = main.c
HFILES = main.h
OFILES = main.o

all: $(OFILES) makefile
	$(LD) $(LDFLAGS) $(OFILES) -o wlad

main.o: main.c main.h makefile
	$(CC) $(CFLAGS) main.c


$(OFILES): $(HFILES)


clean:
	rm -f $(OFILES) core *~ wlad.exe

install:
	make ; cp wlad.exe /usr/local/bin
